	    android:text="@string/str_choose"/>
    <Spinner
        android:id="@+id/spinner_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listview_adopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>